<h1>Shorten URL</h1>

<%= form_for @web_link do |form| %>
  <%= form.label :query, "Short URL Suffix" %>
  <%= form.text_field :key, placeholder: "Optional" %>
  <br>
  <%= form.label :query, "URL Destination" %>
  <%= form.text_field :destination, required: true %>
  <br>
  <br>
  <%= form.submit "Shorten URL!" %>
<% end %>